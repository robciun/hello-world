extends layout

block content
    h1= title
    // Wrapper
    #wrapper
        // USER INFO
        #userInfo
            h2 Vartotojas
            p
                strong Vartotojo vardas:
                |  <span id='nickName'></span> 
                br
                strong Slaptažodis:
                |  <span id='password'></span> 
        // /USER INFO
        // USER LIST
        h2 Vartotojai
        #userList
            table
                thead
                    th Vartotojas
                    th Ištrinti/Atnaujinti
                tbody
        // /USER LIST
        // ADD USER
        #addUserPanel
            h2 Registruoti vartotoją
            #addUser
                fieldset
                    input#inputNickName(type='text', placeholder='nickName') 
                    br
                    input#inputPassword(type='text', placeholder='password') 
                    br
                    button#btnAddUser Registruotis
        // /ADD USER
        // UPDATE USER
        #updateUserPanel
            h2 Slaptažodžio keitimas
            #updateUser
                fieldset
                    input#updateNickName(type='text', placeholder='nickName',)
                    br
                    input#updatePassword(type='text', placeholder='password')
                    br
                    button#btnUpdateUser Atnaujinti
                    button#btnCancelUpdateUser Atšaukti
        // /UPDATE USER
    // /WRAPPER