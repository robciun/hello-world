					<p class="filter-type"><b>Lygis</b></p>
					<div class="dropdown">
						<button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Pasirinkimai
						<span class="caret"></span></button>
						<ul class="dropdown-menu dropdown-menu-middle"> <!-- pakeistas dropdown menu bootstrap css faile -->
							<li><a href="#">Pradžiamokslis</a></li>
							<li><a href="#">Vidutinis</a></li>
							<li><a href="#">Pažengęs</a></li>
							<li><a href="#">Pro</a></li>
							<li><a href="#">Kaip sėmkes skaldau</a></li>
							<li><a href="#">Suprantu ką darau</a></li>
						</ul>
					</div>
				</div>
			</div>
</div>
<br>
<% for(var i=0; i<lectureList.length; i++) { %>
  <div class="row">
    <div class="col-sm-4 col-md-2">
      <p><%= lectureList[i].programmingLanguage %></p>
      <br>
      <p><%= lectureList[i].userName %></p>
    </div>
    <div class="col-sm-4 col-md-10">
      <%= lectureList[i].description %>
      <br>
      <%if (lectureList[i].level == 'Pradžiamokslis') { %>
        <p><%= lectureList[i].level %></p>
      <% } %>
      <%if (lectureList[i].level == 'Vidutinis') { %>
        <p><%= lectureList[i].level %></p>
      <% } %>
      <%if (lectureList[i].level == 'Pažengęs') { %>
        <p><%= lectureList[i].level %></p>
      <% } %>
      <%if (lectureList[i].level == 'Pro') { %>
        <p><%= lectureList[i].level %></p>
      <% } %>
    </div>
    <div class="col-sm-4 col-md-2">
      <p align="center"><a href="/lectureSpecific/<%= lectureList[i]._id %>"><button type="button" class="btn btn-primary btn-xl">Pradėti</button></a></p>
    </div>
  <% } %>


<footer>
  <p align="center" class="blurry-text" ><font align="center" size="2">Visos teisės saugomos</font></p>
</footer>

</div>
</body>
